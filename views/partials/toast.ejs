<!-- Toast thêm giỏ hàng thành công -->
<div
  class="toast align-items-center text-bg-success border-0 position-fixed top-0 start-50 m-4"
  role="alert"
  aria-live="assertive"
  aria-atomic="true"
  id="toast-cart-success"
  data-bs-delay="1500"
>
  <div class="d-flex">
    <div class="toast-body fs-5">Đã thêm vào giỏ hàng!</div>
    <button
      type="button"
      class="btn-close btn-close-white me-2 m-auto"
      data-bs-dismiss="toast"
      aria-label="Đóng"
    ></button>
  </div>
</div>
