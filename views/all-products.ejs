<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tất cả sản phẩm</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- css -->
    <link rel="stylesheet" href="/css/style.css" />
    <!-- Font Awesome Icon -->
    <script
      src="https://kit.fontawesome.com/f542258c79.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <%- include('partials/header') %>

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="container-fluid">
      <ol
        class="breadcrumb py-3 px-5 bg-info bg-opacity-10"
        style="--bs-breadcrumb-divider: '>>'"
      >
        <li class="breadcrumb-item">
          <a href="/">Trang chủ</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
          Tất cả sản phẩm
        </li>
      </ol>
    </nav>

    <!-- Main Content -->
    <div class="container my-5">
      <h2 class="mb-4">Sản phẩm</h2>
      <div class="row">
        <% products.forEach(p => { %>
        <div class="col-md-3 mb-4">
          <div class="card card-hover h-100 shadow-sm">
            <img
              src="<%= p.image %>"
              class="card-img-top"
              alt="<%= p.name %>"
            />
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-center"><%= p.name %></h5>
              <p class="card-text text-center mb-2">
                Xuất xứ: <%= p.origin %><br />
                <span class="text-danger fw-bold"><%= p.price %></span>
              </p>
              <div class="d-flex justify-content-center gap-4 mt-auto">
                <button
                  type="button"
                  class="btn btn-add-to-cart btn-info btn-sm p-2 fs-4"
                  data-id="<%= p.id %>"
                  data-name="<%= p.name %>"
                  data-price="<%= p.price %>"
                  data-image="<%= p.image %>"
                >
                  <i class="fas fa-cart-plus me-2"></i> Thêm vào giỏ
                </button>
                <a
                  href="/product-detail/<%= p.id %>"
                  class="btn btn-warning btn-sm p-2 fs-4"
                  ><i class="fas fa-credit-card me-2"></i> Mua ngay</a
                >
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('partials/footer') %>

    <!-- JS add cart -->
    <script src="/js/add-cart.js"></script>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
